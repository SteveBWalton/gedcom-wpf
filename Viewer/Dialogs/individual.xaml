<Window x:Class="gedcom.viewer.DialogIndividual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gedcom.viewer"
        mc:Ignorable="d"
        Title="Edit Individual" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button x:Name="buttonCancel" Margin="5" Padding="5" Click="buttonCancel_Click" IsCancel="True">Cancel</Button>
            <Button x:Name="buttonOK" Margin="5" Padding="5" IsDefault="True" Click="buttonOK_Click">OK</Button>
        </StackPanel>
        <Grid>
            <Label Content="Name"/>
            <TextBox Width="200" />
        </Grid>
    </DockPanel>
</Window>
